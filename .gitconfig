[user]
	name = Jackson Law

[includeIf "gitdir:~/sb/gh/"]
	path = ~/.config/git/config-github
[includeIf "gitdir:~/sb/gl/"]
	path = ~/.config/git/config-gitlab
[includeIf "gitdir:~/sb/pb/"]
	path = ~/.config/git/config-pm
[includeIf "gitdir:~/w/"]
	path = ~/.config/git/config-work
[includeIf "gitdir:~/.local/share/yadm/"]
	path = ~/.config/git/config-github

[gc]
	autoDetach = false

[pull]
	rebase = true

[diff]
	tool = bc3
[difftool "bc3"]
	trustExitCode = true
[merge]
	tool = bc3
[mergetool "bc3"]
	trustExitCode = true

[gpg]
	program = gpg
